{% extends "layout.njk" %}

{% block head %}
    <title>Portfolio - Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
{% endblock %}

{% block content %}

    <div class="wrapper">
        <h1>Aulas</h1>
    </div>

    <section id="cards">

        {% for item in items %}

            <div class="card" id="{{item.id}}">
                <div class="card__img-container {{ 'featured-wrapper' if item.featured }}">
                    <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="imagem de {{item.title}}">

                    {% if item.featured %}
                        <div class="featured">Featured</div>
                    {% endif %}

                </div>

                <div class="card__content">
                    <p>{{item.title}}</p>
                </div>

                <div class="card__info">
                    <p>{{item.duration}}</p>
                    <p class="card__price">{{item.price}}</p>
                </div>
            </div>

        {% endfor %}
    </section>

    <footer>
        
    </footer>


    <script src="/scripts.js"></script>

{% endblock %}